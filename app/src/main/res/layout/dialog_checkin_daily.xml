<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Daily Check-in"
            android:textColor="@color/black"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="227dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:src="@drawable/icon_dailycheckin"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Days"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_check_day1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/check_none_dailycheck"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:id="@+id/tv_coin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="+50"
                    app:drawableEndCompat="@drawable/coin_tv"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_check_day2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/check_none_dailycheck"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/black"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:id="@+id/tv_coin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="+100"
                    app:drawableEndCompat="@drawable/coin_tv"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_check_day3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/check_none_dailycheck"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/black"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:id="@+id/tv_coin3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="+200"
                    app:drawableEndCompat="@drawable/coin_tv"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_check_day4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/check_none_dailycheck"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/black"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:id="@+id/tv_coin4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="+250"
                    app:drawableEndCompat="@drawable/coin_tv"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_check_day5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/check_none_dailycheck"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/black"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:id="@+id/tv_coin5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="+300"
                    app:drawableEndCompat="@drawable/coin_tv"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_check_day6"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/check_none_dailycheck"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/black"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:id="@+id/tv_coin6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="+300"
                    app:drawableEndCompat="@drawable/coin_tv"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_check_day7"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/check_none_dailycheck"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/black"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:id="@+id/tv_coin7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="+1000"
                    app:drawableEndCompat="@drawable/coin_tv"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Consecutive check-in: "
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvCountDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Days"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ibt_check_in"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center|bottom"
            android:layout_margin="20dp"
            android:background="@drawable/check_in"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</androidx.cardview.widget.CardView>